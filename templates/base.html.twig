<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"
    />

    {% block stylesheets %}
    {{
      encore_entry_link_tags("app")
    }}
    {% endblock %}
  </head>
  <body>
    {% block body %}
    <div>
      {% block header %}
      <header>
        <nav class="bg-gray-100">
          <div
            class="container mx-auto px-4 py-2 flex justify-between items-center"
          >
            <a class="text-xl font-semibold" href="#">Navbar</a>
            <button
              class="lg:hidden text-gray-700 focus:outline-none"
              type="button"
              aria-label="Toggle navigation"
              onclick="document.getElementById('collapsibleNavId').classList.toggle('hidden')"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"
                />
              </svg>
            </button>
            <div
              class="hidden lg:flex lg:items-center lg:w-auto w-full"
              id="collapsibleNavId"
            >
              <ul
                class="flex flex-col lg:flex-row lg:space-x-4 space-y-2 lg:space-y-0 mt-2 mr-2 lg:mt-0"
              >
                <li>
                  <a
                    class="text-gray-700 hover:text-blue-500"
                    href="{{ path('clients.index') }}"
                    aria-current="page"
                    >Clients</a
                  >
                </li>
                <li>
                  <a
                    class="text-gray-700 hover:text-blue-500"
                    href="{{ path('users.store') }}"
                    aria-current="page"
                    >Users</a
                  >
                </li>
                <li>
                  <a
                    class="text-gray-700 hover:text-blue-500"
                    href="{{ path('articles.index') }}"
                    aria-current="page"
                    >Articles</a
                  >
                </li>
                <li>
                  <a
                    class="text-gray-700 hover:text-blue-500"
                    href="{{ path('dettes.index') }}"
                    aria-current="page"
                    >Dettes</a
                  >
                </li>
                <li class="relative group">
                  <a
                    class="text-gray-700 hover:text-blue-500 cursor-pointer"
                    href="#"
                    >Home</a
                  >
                  <div
                    class="absolute left-0 mt-2 w-48 hidden group-hover:block bg-white border border-gray-200 shadow-lg"
                  >
                    <a
                      class="block px-4 py-2 text-gray-700 hover:bg-gray-100"
                      href="#"
                      >Action 1</a
                    >
                    <a
                      class="block px-4 py-2 text-gray-700 hover:bg-gray-100"
                      href="#"
                      >Action 2</a
                    >
                  </div>
                </li>
              </ul>
              <form class="flex mt-4 lg:mt-0">
                <input
                  class="form-input block w-full lg:w-auto px-4 py-2 border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none"
                  type="text"
                  placeholder="Search"
                />
                <button
                  class="ml-2 px-4 py-2 border border-green-800 hover:bg-green-800 hover:text-white font-semibold rounded-md"
                  type="submit"
                >
                  Search
                </button>
              </form>
            </div>
          </div>
        </nav>
      </header>
      {% endblock %}
      <main>{% block main %} {% endblock %}</main>

      {% block footer %}
      <footer></footer>
      {% endblock %}
    </div>
    {% endblock %} {% block javascripts %}
    {{ encore_entry_script_tags("app") }}
    {% block importmap %}{{ importmap("app") }}{% endblock %} {% endblock %}
  </body>
</html>
