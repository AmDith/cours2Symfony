{% extends 'base.html.twig' %}

{% block main %}
<div class="custom-class">
    <div class="border rounded-lg shadow-lg border px-4">
        <div class="bg-gray-100 px-4 py-2 font-semibold text-lg">Liste de clients</div>
        <div class="p-4">
            <div class="flex justify-end mb-2">
                <a href="{{ path('clients.store') }}" role="button" class="border border-gray-800 text-gray-800 hover:bg-gray-800 hover:text-white font-semibold py-2 px-4 rounded">
                    Create
                </a>
            </div>
            <div class="search mb-2">
                <form action="{{ path('clients.searchClientByTelephone') }}" method="POST" class="flex mt-4 lg:mt-0">
                    <input
                        name="telephone"
                        class="form-input block w-full lg:w-auto px-4 py-2 border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none"
                        type="text"
                        placeholder="Telephone"
                    />
                    <button
                        class="ml-2 px-4 py-2 border border-green-800 hover:bg-green-800 hover:text-white font-semibold rounded-md"
                        type="submit"
                    >
                        Search
                    </button>
                </form>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white border border-gray-300">
                    <thead>
                        <tr class="bg-gray-200">
                            <th class="border px-4 py-2 text-left">#</th>
                            <th class="border px-4 py-2 text-left">Nom</th>
                            <th class="border px-4 py-2 text-left">Prenom</th>
                            <th class="border px-4 py-2 text-left">Surname</th>
                            <th class="border px-4 py-2 text-left">Telephone</th>
                            <th class="border px-4 py-2 text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% if clients is iterable %}
                        {% for client in clients %}
                        <tr>
                            <td class="border px-4 py-5">{{ client.id }}</td>
                            <td class="border px-4 py-5">{{ client.userId ? client.userId.nom : '#' }}</td>
                            <td class="border px-4 py-5">{{ client.userId ? client.userId.prenom : '#' }}</td>
                            <td class="border px-4 py-5">{{ client.Surname }}</td>
                            <td class="border px-4 py-5">{{ client.telephone }}</td>
                            <td class="border px-4 py-5 text-center space-x-2">
                                <a href="#" role="button" class="border border-gray-800 text-gray-800 hover:bg-gray-800 hover:text-white font-semibold py-2 px-4 rounded">Dettes</a>
                                <a href="#" role="button" class="border border-red-600 text-red-600 hover:bg-red-600 hover:text-white font-semibold py-2 px-4 rounded">Delete</a>
                            </td>
                        </tr>
                        {% endfor %}
                    {% elseif clients is not empty %}
                        <tr>
                            <td class="border px-4 py-5">{{ clients.id }}</td>
                            <td class="border px-4 py-5">{{ clients.userId ? clients.userId.nom : '#' }}</td>
                            <td class="border px-4 py-5">{{ clients.userId ? clients.userId.prenom : '#' }}</td>
                            <td class="border px-4 py-5">{{ clients.Surname }}</td>
                            <td class="border px-4 py-5">{{ clients.telephone }}</td>
                            <td class="border px-4 py-5 text-center space-x-2">
                                <a href="#" role="button" class="border border-gray-800 text-gray-800 hover:bg-gray-800 hover:text-white font-semibold py-2 px-4 rounded">Dettes</a>
                                <a href="#" role="button" class="border border-red-600 text-red-600 hover:bg-red-600 hover:text-white font-semibold py-2 px-4 rounded">Delete</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="border px-4 py-5 text-center">Aucun client trouv√©.</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <nav aria-label="Page navigation" class="flex justify-end mt-4">
                <ul class="flex space-x-2">
                    <li>
                        <a class="px-3 py-1 text-gray-500 bg-gray-200 rounded-md hover:bg-gray-300 disabled:opacity-50" href="#" aria-label="Previous" aria-disabled="true">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li>
                        <a class="px-3 py-1 text-white bg-blue-600 rounded-md" href="#" aria-current="page">1</a>
                    </li>
                    <li>
                        <a class="px-3 py-1 text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300" href="#">2</a>
                    </li>
                    <li>
                        <a class="px-3 py-1 text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300" href="#">3</a>
                    </li>
                    <li>
                        <a class="px-3 py-1 text-gray-500 bg-gray-200 rounded-md hover:bg-gray-300" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
{% endblock %}
