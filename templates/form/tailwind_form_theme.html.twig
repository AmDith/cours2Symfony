{% block form_row %}
    <div class="mb-4">
        {{ form_label(form) }}
        <div class="mt-1">
            {{ form_widget(form, {'attr': {'class': 'w-full px-4 py-2 border rounded-md'}}) }}
            {{ form_errors(form) }}
        </div>
    </div>
{% endblock %}

{% block form_label %}
    {% if label is not same as(false) %}
        <label class="block text-sm font-medium text-gray-700">
            {{ label|default(name|humanize) }}
        </label>
    {% endif %}
{% endblock %}

{% block form_errors %}
    {% if errors|length > 0 %}
        <div class="text-red-500 text-sm mt-1">
            {{ errors|first.message }}
        </div>
    {% endif %}
{% endblock %}

{% block form_widget_simple %}
    <input
        type="{{ type|default('text') }}"
        {{ block('widget_attributes') }}
        value="{{ value }}"
        class="w-full px-4 py-2 border rounded-md"
    />
{% endblock %}

{% block button_row %}
    <div class="flex justify-end mt-4">
        {{ form_widget(form) }}
    </div>
{% endblock %}

{% block submit_widget %}
    <button type="{{ type|default('submit') }}"
            class="px-4 py-2 bg-blue-500 mb-2 text-white rounded-md hover:bg-blue-600">
        {{ label|default('Submit') }}
    </button>
{% endblock %}
